<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
  
    
     <LinearLayout 
        android:id="@+id/titleLayouthehddd"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_marginTop="5dip"
        >
        
         <TextView 
       android:id="@+id/wifiTitle"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="工厂测试程序V1.0版---WIFI测试"
       android:textSize="30sp"
       
       />
    
        
    </LinearLayout>
    
     <TextView 
         android:id="@+id/currentConnectWifi"
         android:layout_width="fill_parent"
         android:layout_height="0dip"
         android:layout_weight="1"
         android:textSize="20sp"
         android:layout_marginLeft="5dip"
         />
     
    <ListView 
               android:id="@+id/currentWifiListView"
               android:layout_width="fill_parent"
               android:layout_height="0dip"
               android:layout_marginTop="5dip"
               android:background="@drawable/wifi_bg_second"
               android:layout_weight="14"
               />
     <TextView 
           android:id="@+id/backtip2"
           android:layout_width="fill_parent"
           android:layout_height="0dip"
           android:text="按BACK键退出"
         android:layout_weight="1"
           android:gravity="right"
          android:paddingRight="30dip"
          android:layout_marginTop="10dip"
           android:textSize="22sp"
           />
</LinearLayout>
