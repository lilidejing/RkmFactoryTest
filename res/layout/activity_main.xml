<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.csw.rkmfactorytest.MainActivity" 
    >

    
    <LinearLayout 
        android:id="@+id/titleLayoutheh"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dip"
        >
        
        <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" 
        android:textSize="30sp"
        android:layout_alignParentTop="true"/>
    
        
    </LinearLayout>
    
    
    
   <LinearLayout 
       android:id="@+id/contentLayout"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_below="@+id/titleLayoutheh"
       android:layout_marginTop="30dip"
       android:orientation="vertical"
       >
       
       
       <LinearLayout 
           android:id="@+id/leftLayout"
           android:layout_height="fill_parent"
           android:layout_width="fill_parent"
           android:orientation="vertical"
           
           android:layout_weight="2"
           
           >
           <TextView 
               android:id="@+id/pleaseTalk"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="请对着MIC说话"
               android:textSize="35sp"
               android:layout_marginLeft="20dip"
               />
           <TextView 
               android:id="@+id/kosVersion"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="45dip"
               android:textSize="30sp"
               android:layout_marginLeft="120dip"
               android:text="固件版本号"
               
               />
           <TextView 
               android:id="@+id/hwVersion"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dip"
               android:textSize="30sp"
               android:layout_marginLeft="120dip"
               android:text="硬件版本号"
               />
           <TextView 
               android:id="@+id/tlkgVersionText"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dip"
               android:textSize="30sp"
               android:layout_marginLeft="120dip"
               android:text="天籁K歌版本号"
               />
           <TextView 
               android:id="@+id/snText"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dip"
               android:textSize="30sp"
               android:layout_marginLeft="120dip"
               android:text="设备ID"
               />
           <TextView 
               android:id="@+id/pressKeyCheck"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dip"
               android:text="MAC地址"
               android:textSize="30sp"
               android:layout_marginLeft="120dip"
               />
           
       </LinearLayout>
       
       
       <LinearLayout 
           android:id="@+id/rightLayout"
           android:layout_height="fill_parent"
           android:layout_width="fill_parent"
           android:orientation="horizontal" 
           android:layout_weight="9"
           android:gravity="center"
           
           >
           
           <Button 
               android:id="@+id/testWifiBtn"
               android:layout_width="200dip"
               android:layout_height="80dip"
               android:textSize="22sp"
               android:text="WIFI测试"
               
               />
           <Button 
               android:id="@+id/testPressKeyBtn"
               android:layout_width="200dip"
               android:layout_height="80dip"
               android:textSize="22sp"
               android:text="按键测试"
               android:layout_marginLeft="40dip"
               />
           
       </LinearLayout>
       <TextView 
           android:id="@+id/backtip1"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:text="按BACK键退出"
           android:layout_weight="9"
           android:gravity="right"
          android:paddingRight="30dip"
          android:layout_marginTop="10dip"
           android:textSize="22sp"
           />
       
   </LinearLayout>
</RelativeLayout>
